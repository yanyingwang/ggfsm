#lang at-exp racket/base

(require racket/format
         ming ming/number
         "8gua.rkt"
         "64gua.rkt"
         "gua-helper.rkt"
         )
(provide 攸以价卦 攸以量卦 攸以并卦 攸以卦
         彐顶价 彐底价 彐顶量 彐底量
         􏹈卦文
         )

(名 (彐顶价 文)
    (𡊤 􏺗 (􏷑 (入 (e) (句化米 (􏿰弔 e 'high))) 文)))
(名 (彐底价 文)
    (𡊤 􏺘 (􏷑 (入 (e) (句化米 (􏿰弔 e 'low))) 文)))

(名 (彐顶量 文)
    (𡊤 􏺗 (􏷑 (λ (e) (句化米 (􏿰弔 e 'volume))) 文)))
(名 (彐底量 文)
    (𡊤 􏺘 (􏷑 (入 (e) (句化米 (􏿰弔 e 'volume))) 文)))

(名 (􏹈卦文 文 卦)
    (􏹈 (λ (H) (􏷂=? (􏿰弔 H 'price-gua) 卦)) 文))


(名 (攸以价卦 H 顶价 底价)
    (名 间价
        (/ (- 顶价 底价) 64))
    (名 卦序价 ;由低到高
        (􏼎 64 (λ (N)
                 (+ 底价 (* 间价 (􏽊 N))))))
    (名 均价
        (/ (+ (句化米 (􏿰弔 H 'low))
              (句化米 (􏿰弔 H 'high))) 2))
    (名 价卦
        (弔 六十四卦 (􏹂 卦序价 (λ (价) (>= 价 均价)))))
    (􏿰攸+ H
      'avg-price 均价
      'jgua 价卦)
    )

(名 (攸以量卦 H 顶量 底量)
    (名 间量
        (/ (- 顶量 底量) 64))
    (名 卦序量  ;由低到高
        (􏼎 64 (λ (N)
                (+ 底量 (* 间量 (􏽊 N))))))
    (名 实量 (句化米 (􏿰弔 H 'volume)))
    (名 量卦
        (弔 六十四卦 (􏹂 卦序量 (λ (量) (>= 量 实量)))))
    (􏿰攸 H 'lgua 量卦)
    )

;; 并卦：量卦并价卦
(名 (攸以并卦 H)
    (名 上卦 (下单卦 (􏿰弔 H 'lgua)))
    (名 下卦 (下单卦 (􏿰弔 H 'jgua)))
    (名 并卦 (复卦 上卦 下卦))
    (􏿰攸+ H 'bgua 并卦)
    )

(名 (攸以卦 文)
    (名 顶价 (彐顶价 文))
    (名 底价 (彐底价 文))
    (名 顶量 (彐顶量 文))
    (名 底量 (彐底量 文))
    (􏷑 (λ (H)
          (攸以并卦 (攸以量卦 (攸以价卦 H 顶价 底价)
                              顶量 底量)))
        文)
    )