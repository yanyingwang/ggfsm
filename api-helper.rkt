(名 (ts/其他价 文)
    (佫 (λ (H)
          (􏿴
           (􏹔 (句化米 (􏿰弔 H 'open)))
           (􏹔 (句化米 (􏿰弔 H 'close)))
           (􏹔 (句化米 (􏿰弔 H 'high)))
           (􏹔 (句化米 (􏿰弔 H 'low)))
           ))
        文))
(名 (ts/均价 文)
    (佫 (λ (H)
          (􏹔 (􏿰弔 H 'avg-price)))
        文))


(名 (ts/量 文)
    (佫 (λ (H) (~a (􏹓 (/ (句化米 (􏿰弔 H 'volume)) 10000)) "万手"))
        文))

(名 (ts/复卦 文)
    (佫 (λ (H)
          (~a (􏹔 (􏿰弔 H 'avg-price)) "元"
              "/"
              (􏹓 (/ (句化米 (􏿰弔 H 'volume)) 10000)) "万手"
              ))
        文))
