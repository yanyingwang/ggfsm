#lang at-exp racket/base

(require ming
         racket/format
         "8gua.rkt"
         "64gua.rkt")
(provide 合成复卦 拆成单卦 之上单卦 之下单卦 化卦数/64 化卦数/8 化卦符/8 化卦符/64
         ;; 化卦数/8/二进 化卦数/64/二进
         )


(名 (合成复卦 上卦 下卦)
    (名 N (弓 八卦 上卦))
    (名 M (弓 八卦 下卦))
    (名 X (+ (* M 8) N)) ; 62卦是下八卦的每一序卦都依次排布上八卦
    (弔 六十四卦 X)
    )

(名 (拆成单卦 复卦)
    (名 X (弓 六十四卦 复卦))
    (􏸾 (M N) (􏻓和𥺌 X 8))
    (並 (弔 八卦 N)
        (弔 八卦 M)))

(名 (之上单卦 复卦)
    (名 X (弓 六十四卦 复卦))
    (􏸾 (M N) (􏻓和𥺌 X 8))
     (弔 八卦 N))

(名 (之下单卦 复卦)
    (名 X (弓 六十四卦 复卦))
    (􏸾 (M N) (􏻓和𥺌 X 8))
    (弔 八卦 M)
    )

(名 (化卦数/8 卦名)
    (弓 八卦 卦名))
(名 (化卦数/64 卦名)
    (弓 六十四卦 卦名))

(名 (化卦符/8 卦名)
    (􏿰弔 八卦名符 卦名))
(名 (化卦符/64 卦名)
    (􏿰弔 六十四卦名符 卦名))

